{
  "name": "@arete/cli",
  "version": "0.1.0",
  "description": "AretÃ© - Product Management Workspace CLI",
  "type": "module",
  "bin": {
    "arete": "./packages/cli/bin/arete.js"
  },
  "main": "./packages/core/dist/index.js",
  "types": "./packages/core/dist/index.d.ts",
  "files": [
    "packages/cli/bin/",
    "packages/core/dist/",
    "packages/runtime/",
    "AGENTS.md",
    "dist/"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx packages/cli/src/index.ts",
    "dev:setup": "bash scripts/dev-setup.sh",
    "build": "npm run build:agents:dev && npm run build:agents:prod && npm run build:packages",
    "build:packages": "tsc -b packages/core packages/cli",
    "build:agents:dev": "tsx scripts/build-agents.ts dev",
    "build:agents:prod": "tsx scripts/build-agents.ts prod",
    "typecheck": "tsc -b packages/core packages/cli",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "start": "node packages/cli/bin/arete.js",
    "test": "tsx --test 'packages/core/test/**/*.test.ts' 'packages/cli/test/**/*.test.ts'",
    "test:all": "npm run typecheck && npm test"
  },
  "keywords": [
    "product-management",
    "pm",
    "workspace",
    "cli",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@arete/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "yaml": "^2.4.0",
    "inquirer": "^9.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}