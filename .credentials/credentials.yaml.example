# Areté Integration Credentials
# Copy this file to credentials.yaml and fill in your actual keys
# 
# cp credentials.yaml.example credentials.yaml
#
# This file (credentials.yaml) is gitignored and will not be committed.

# =============================================================================
# MEETINGS & COMMUNICATION
# =============================================================================

# Fathom - AI Meeting Recorder
# Get key at: https://fathom.video/settings/api
fathom:
  api_key: ""

# Krisp - Meeting recording with AI summaries, transcripts, and action items
# Run: arete integration configure krisp  (opens browser for one-time OAuth)
# All fields below are set automatically during configure — do not edit by hand.
krisp:
  client_id: ""         # set automatically by configure
  client_secret: ""     # set automatically by configure
  access_token: ""      # set automatically by configure
  refresh_token: ""     # set automatically by configure
  expires_at: 0         # Unix timestamp (seconds), managed automatically

# Granola - Meeting Notes
# Get key at: https://granola.so/settings
granola:
  api_key: ""

# Calendar
# Apple Calendar (macOS): No credentials needed! Uses local Calendar.app
# Google Calendar: Set up OAuth at https://console.cloud.google.com/
# Outlook: Set up at https://portal.azure.com/
calendar:
  provider: apple     # apple (no auth) | google | outlook
  # Only needed for Google/Outlook:
  # client_id: ""
  # client_secret: ""
  # refresh_token: ""

# Slack
# Create app at: https://api.slack.com/apps
slack:
  bot_token: ""      # xoxb-...
  user_token: ""     # xoxp-... (optional, for user-level actions)

# Email (Gmail)
# Set up OAuth at: https://console.cloud.google.com/
gmail:
  client_id: ""
  client_secret: ""
  refresh_token: ""

